{
  "name": "react-you-do-you",
  "version": "2.0.0",
  "private": true,
  "homepage": "/react-you-do-you",
  "scripts": {
    "build": "tsc && vite build",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "prepreview": "yarn build",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest",
    "test:ci": "CI=true vitest run",
    "coverage": "vitest run --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "@typescript-eslint/semi": [
            "error",
            "never"
          ]
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.3.1",
    "@mui/material": "^5.4.0",
    "tss-react": "^3.3.6",
    "@reduxjs/toolkit": "^1.7.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "7.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@storybook/addon-actions": "^6.4.15",
    "@storybook/addon-essentials": "^6.4.15",
    "@storybook/addon-links": "^6.4.15",
    "@storybook/node-logger": "^6.4.15",
    "@storybook/preset-create-react-app": "^4.0.0",
    "@storybook/react": "^6.4.15",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "16.4.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "7.1.22",
    "@vitejs/plugin-react": "^1.0.7",
    "babel-loader": "^8.2.3",
    "eslint": "^8.7.0",
    "eslint-config-react-app": "^7.0.0",
    "husky": "^7.0.4",
    "jsdom": "latest",
    "lint-staged": "12.3.2",
    "prettier": "2.5.1",
    "prettier-plugin-packagejson": "2.2.15",
    "storybook-builder-vite": "^0.1.13",
    "storybook-dark-mode": "^1.0.8",
    "typescript": "^4.5.5",
    "vite": "^2.7.2",
    "vite-plugin-checker": "^0.3.4",
    "vitest": "^0.2.5"
  }
}
